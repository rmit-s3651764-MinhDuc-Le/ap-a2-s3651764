<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="600.0" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="NewPersonController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="36.0" prefWidth="200.0">
         <children>
            <Label prefWidth="100.0" text="Name">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <TextField fx:id="nameTextField" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="36.0" prefWidth="200.0">
         <children>
            <Label prefWidth="100.0" text="Photo">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <TextField fx:id="photoTextField" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="36.0" prefWidth="200.0">
         <children>
            <Label prefWidth="100.0" text="Status">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <TextField fx:id="statusTextField" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="36.0" prefWidth="200.0">
         <children>
            <Label prefWidth="100.0" text="Gender">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <RadioButton fx:id="maleRadioButton" mnemonicParsing="false" text="Male">
               <HBox.margin>
                  <Insets right="24.0" />
               </HBox.margin>
               <toggleGroup>
                  <ToggleGroup fx:id="genderToggleGroup" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="femaleRadioButton" mnemonicParsing="false" text="Female" toggleGroup="$genderToggleGroup" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="36.0" prefWidth="200.0">
         <children>
            <Label prefWidth="100.0" text="Age">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <TextField fx:id="ageTextField" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="36.0" prefWidth="200.0">
         <children>
            <Label prefWidth="100.0" text="State">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <ChoiceBox fx:id="stateChoiceBox" prefWidth="150.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefWidth="580.0" spacing="24.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onClickSaveBtn" prefWidth="64.0" text="Save" />
            <Button mnemonicParsing="false" onAction="#onClickCancelBtn" prefWidth="64.0" text="Cancel" />
         </children>
         <VBox.margin>
            <Insets top="24.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
